<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="arturoki.cuentacp.Main3Activity">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView3" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Items desbloqueados por nivel"
                android:id="@+id/textView6"
                android:layout_below="@+id/scrollView3"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <ListView
                android:layout_width="wrap_content"
                android:layout_height="451dp"
                android:id="@+id/listView"
                android:layout_below="@+id/scrollView3"
                android:layout_toRightOf="@+id/scrollView3"
                android:layout_toEndOf="@+id/scrollView3" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:layout_below="@+id/scrollView3"
                android:layout_toLeftOf="@+id/Acerca"
                android:layout_toStartOf="@+id/Acerca"
                android:src="@drawable/exp2"
                android:layout_gravity="left" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Atras"
                android:id="@+id/button3"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:onClick="salir"
                android:textColor="@color/abc_search_url_text_selected"
                android:background="@color/colorAccent" />

            <Button
                android:layout_width="117dp"
                android:layout_height="wrap_content"
                android:text="Acerca de"
                android:id="@+id/Acerca"
                android:layout_row="17"
                android:layout_column="0"
                android:onClick="acerca"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:textColor="@color/abc_search_url_text_selected"
                android:background="@color/colorAccent"
                android:layout_gravity="right" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
